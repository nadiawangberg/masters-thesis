<launch>
    <arg name="rviz" default="true"/>
    <arg name="use_lcd" default="false"/>
    <arg name="scene" default="office"/>
    <arg name="record_for_evo" default="false"/>
    <arg name="d" default="2m"/> <!-- TODO - the duration parameter doesnt properly work? -->
    <arg name="volumetric" default="false"/>
    <arg name="semantic" default="false"/> <!-- NOTE, only runs if volumetric is set to true -->
    <arg name="s" default="0" doc="start time for rosbag"/>

    <param name="use_sim_time"   value="true" />

    <group if="$(eval arg('scene') == 'office')">
        <node pkg="rosbag" type="play" name="player" args="$(find robust_slam)/bags/uHumans/uHumans2_office_s1_00h.bag --clock -s $(arg s)"/>
    </group>

    <group if="$(eval arg('scene') == 'office_w_people')">
        <node pkg="rosbag" type="play" name="player" args="$(find robust_slam)/bags/uHumans/uHumans2_office_s1_12h.bag --clock -s $(arg s)"/>
    </group>

    <group if="$(eval arg('scene') == 'subway')">
        <node pkg="rosbag" type="play" name="player" args="$(find robust_slam)/bags/uHumans/uHumans2_subway_s1_00h.bag --clock -s $(arg s)"/>
    </group>

    <group if="$(eval arg('scene') == 'subway_w_people')">
        <node pkg="rosbag" type="play" name="player" args="$(find robust_slam)/bags/uHumans/uHumans2_subway_s1_36h.bag --clock -s $(arg s)"/>
    </group>

    <include file="$(find kimera_vio_ros)/launch/kimera_vio_ros_uhumans2.launch">
        <arg name="online" value="true" />
        <arg name="use_lcd" value="$(arg use_lcd)"/>
        <arg name="run_stereo_dense" value="$(arg volumetric)"/> <!-- needed for kimera_semantics -->
    </include>

    <group if="$(arg volumetric)">
        <include file="$(find kimera_semantics_ros)/launch/kimera_semantics_uHumans2.launch">
                <arg name="metric_semantic_reconstruction" value="$(arg semantic)" /> <!-- set to true for semantics-->

                <!-- TODO manually comment this in when using metrics with either of the subway datasets -->
                <!-- <arg name="semantic_label_2_color_csv_filepath" value="$(find kimera_semantics_ros)/cfg/tesse_multiscene_underground1_segmentation_mapping.csv"/> -->

        </include>
    </group>

    <group if="$(arg rviz)">
            <node name="rviz" pkg="rviz" type="rviz" args="-d $(find robust_slam)/rviz/kimera_vio_uhumans.rviz" required="true" />
    </group>

    <group if="$(arg record_for_evo)">
            <node pkg="rosbag" type="record" name="record" required="true" args="--duration $(arg d) -O $(find robust_slam)/bags/bags_for_evo/uhumans2_$(arg scene)_$(arg d).bag /tf" /> <!-- NOTE - seems like it records for longer than is specified?? -->
    </group>

</launch>